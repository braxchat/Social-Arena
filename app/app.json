{
  "expo": {
    "name": "Social Arena: GPS",
    "slug": "social-arena-gps",
    "scheme": "socialarena",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "buildNumber": "3",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Social Arena needs your location to track your position during gameplay.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Social Arena needs your location to track your position during gameplay, even when the app is in the background."
      },
      "bundleIdentifier": "com.socialarena.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.socialarena.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}